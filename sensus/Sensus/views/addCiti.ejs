<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Add and List Citizen</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <form action="/movies/addCiti/<%= data.id %>" method="POST">
        <h1><%= data.name %></h1>
    <div>
        <label for="AddCast"><h2>Add Citizen</h2></label>
        <select name="citizen">
            <% citizen.forEach(el=>{ %>
                <option value="<%= el.id %>"><%= el.name %></option>
           <% }) %>
        </select>
    </div>
    <br>
    <div>
        <input type="submit" value="Save">
        <input type="reset" value="Cancel">
    </div>
    </form>
    <h2>List Cast</h2>
    <table border="1">
    <thead>
        <tr>
            <th>Name of Citizen</th>
        </tr>
    </thead>
    <tbody>
        <%  citizen.forEach((e)=>{ %>
            <tr>
                <th><%= e.name %></th>
            </tr>
        <% }) %>
    </tbody>
    </table>  
    <%- include('partials/footer') %>
</body>
</html>